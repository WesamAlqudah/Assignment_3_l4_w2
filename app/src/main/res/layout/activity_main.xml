<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Android Version"
        android:inputType="text"
        android:id="@+id/edt_android_version"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Android Code Name"
        android:inputType="text"
        android:id="@+id/edt_android_code"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn_add"
        android:onClick="add"/>
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/tv_tr_ver"
                android:text="Version"
                android:layout_weight="1"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_tr_code"
                android:text="Code Name"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Android 9.0"
                android:layout_weight="1" />
            <TextView
                android:text="Pie"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Android 8.0"
                android:layout_weight="1" />
            <TextView
                android:text="Oreo"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>



</LinearLayout>